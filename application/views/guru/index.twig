{% extends 'layouts/app.twig' %}

{% block title %}
	Daftar Wali Kelas
{% endblock %}

{% block header %}
	<h1> Daftar Wali Kelas </h1>
{% endblock %}

{% block content %}
	<a href="{{ base_url() }}guru/tambah" class="btn btn-primary"><i class="fa fa-plus"></i> Tambah</a>
	<br><br>
	<div class="table-responsive">
		<table class="table table-hover table-bordered">
			<thead>
				<tr>
					<th width="20px">#</th>
					<th>NIP</th>
					<th>Nama</th>
					<th>Wali Kelas</th>
					<th width="80" data-orderable="false" data-searchable="false">&nbsp;</th>
				</tr>
			</thead>
			<tbody>
				{% for item in guru %}
				<tr>
					<td>{{ loop.index }}</td>
					<td>{{ item.nip }}</td>
					<td>{{ item.nama|title }}</td>
					<td>{{ [item.kelas.kelas, item.ruang.ruang]|join }}</td>
					<td>
						<a href="{{ base_url('guru/tampil/') }}{{ item.id }}" class="btn btn-info btn-xs"><i class="fa fa-eye"></i></a>
						<a href="{{ base_url('guru/edit/') }}{{ item.id }}" class="btn btn-warning btn-xs"><i class="fa fa-edit"></i></a>
						<a href="{{ base_url('guru/hapus/') }}{{ item.id }}" class="btn btn-danger btn-xs" onclick="return confirm()"><i class="fa fa-trash"></i></a>
					</td>
				</tr>
				{% endfor %}
				
			</tbody>
		</table>
	</div>
{% endblock %}

{% block css %}
	<link rel="stylesheet" href="{{ base_url() }}css/dataTables.bootstrap.min.css">
{% endblock %}

{% block js %}
	<script src="{{ base_url() }}js/jquery.dataTables.min.js"></script>
	<script src="{{ base_url() }}js/dataTables.bootstrap.min.js"></script>
	<script>
	$(document).ready(function () {
		$('.table').dataTable({
			// 
		});
	});
	</script>
{% endblock %}
