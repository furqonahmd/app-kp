{% extends 'layouts/app.twig' %}

{% block title %}
	Tambah Iuran
{% endblock %}

{% block header %}
	<h1>Tambah Iuran</h1>
{% endblock %}

{% block content %}
	{{ form_open(base_url('iuran/tambah')) }}
		<div class="form-group">
			<label for="">Kategori</label>
			<input type="text" name="kategori" id="kategori" class="form-control" placeholder="Masukkan Kategori iuran">
		</div>
		<div class="form-group">
			<label for="">Jumlah</label>
			<input type="text" name="jumlah" id="jumlah" class="form-control" placeholder="Masukkan jumlah iuran">
		</div>
		<div class="form-group">
			<label for="">Kelas</label>
			<select name="kelas[]" id="kelas" class="form-control" multiple>
				{% for item in kelas %}
					<option value="{{ item.id }}">{{ item.kelas }}</option>
				{% endfor %}
			</select>
		</div>
		<div class="form-group">
			<button type="submit" name="simpan" class="btn btn-primary"><i class="fa fa-save"></i> Simpan</button>
		</div>
	{{ form_close() }}
{% endblock %}

{% block css %}
	<link rel="stylesheet" href="{{ base_url() }}/css/select2.min.css">
	<style>
		.select2-container--default .select2-selection--multiple, .select2-dropdown {
			border-radius: 0px;
		}
	</style>
{% endblock %}

{% block js %}
	<script src="{{ base_url() }}/js/select2.full.min.js"></script>
	<script>
		$(document).ready(function () {
			$('#kelas').select2({
				placeholder: '-- Pilih Kelas --'
			});
		});
	</script>
{% endblock %}
