{% extends 'layouts/app.twig' %}

{% block title %}
	Daftar Kelas
{% endblock %}

{% block header %}
	<h1> Daftar Kelas </h1>
{% endblock %}

{% block content %}
	<div class="table-responsive">
		<table class="table table-hover table-bordered">
			<thead>
				<tr>
					<th width="20px">#</th>
					<th>Kelas</th>
					<th data-orderable="false">Ruang</th>
					<th width="80" data-orderable="false">&nbsp;</th>
				</tr>
			</thead>
			<tbody>
				{% for item in kelas %}
				<tr>
					<td>{{ loop.index }}</td>
					<td>{{ item.kelas }}</td>
					<td>
						{% for data in item.ruang %}
							<div class="label label-default">{{ data.ruang }}</div>
						{% endfor %}
					</td>
					<td>
						<a href="{{ base_url('kelas/tampil/') }}{{ item.id }}" class="btn btn-info btn-xs"><i class="fa fa-eye"></i></a>
						<a href="{{ base_url('kelas/edit/') }}{{ item.id }}" class="btn btn-warning btn-xs"><i class="fa fa-edit"></i></a>
						<a href="{{ base_url('kelas/hapus/') }}{{ item.id }}" class="btn btn-danger btn-xs" onclick="return confirm()"><i class="fa fa-trash"></i></a>
					</td>
				</tr>
				{% endfor %}
				
			</tbody>
		</table>
	</div>
{% endblock %}

{% block css %}
	<link rel="stylesheet" href="{{ base_url() }}/css/dataTables.bootstrap.min.css">
{% endblock %}

{% block js %}
	<script src="{{ base_url() }}/js/jquery.dataTables.min.js"></script>
	<script src="{{ base_url() }}/js/dataTables.bootstrap.min.js"></script>
	<script>
	$(document).ready(function () {
		$('.table').dataTable({
			// 
		});
	});
	</script>
{% endblock %}
