{% extends 'layouts/app.twig' %}

{% block title %}
	Detail Kelas {{ [kelas.kelas, kelas.ruang]|join }}
{% endblock %}

{% block header %}
	<h1> Detail Kelas {{ [kelas.kelas, '-', kelas.ruang.first.ruang]|join }}</h1>
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-3">
			<div class="table-responsive">
				<table class="table table-bordered">
					<tbody>
						<tr>
							<th>Kelas</th>
							<td>{{ kelas.kelas }}</td>
						</tr>
						<tr>
							<th>Ruang</th>
							<td>
								{% for item in kelas.ruang %}
									<div class="label label-default">{{ item.ruang }}</div>
								{% endfor %}
							</td>
						</tr>
					</tbody>
				</table>
			</div>
			<a href="{{ [base_url('kelas/edit/'), kelas.id]|join }}" class="btn btn-warning"><i class="fa fa-edit"></i> Edit</a>
			<a href="{{ base_url('kelas') }}" class="btn btn-danger"><i class="fa fa-reply"></i> Kembali</a>
		</div>
	</div>
{% endblock %}
